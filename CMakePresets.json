{
  "version": 1,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev-mode",
      "displayName": "Developer mode",
      "description": "Developer build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/dev",
      "cacheVariables": {
        "tupl_DEVELOPER_MODE": "ON"
      }
    },
    {
      "name": "flags-unix",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic",
        "CMAKE_CXX_EXTENSIONS": "OFF"
      }
    },
    {
      "name": "flags-windows",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/W4 /permissive- /utf-8 /volatile:iso /EHsc /Zc:__cplusplus /Zc:throwingNew"
      }
    }
  ]
}
